{
  "name": "@n0zer0d4y/asana-project-ops",
  "publishConfig": {
    "access": "public"
  },
  "version": "1.0.1",
  "description": "Highly efficient and robust MCP server for Asana project management with advanced batch operations, direct section assignment, and enterprise-grade reliability",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/n0zer0d4y/asana-project-ops.git"
  },
  "homepage": "https://github.com/n0zer0d4y/asana-project-ops",
  "main": "dist/index.js",
